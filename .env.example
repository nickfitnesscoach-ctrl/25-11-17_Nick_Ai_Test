# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
BOT_ADMIN_ID=123456789

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection
# For Docker: use "postgres" as DB_HOST
# For local: use "localhost" or "127.0.0.1"
DB_HOST=postgres
DB_PORT=5432
DB_NAME=calorie_bot_db
DB_USER=postgres
DB_PASSWORD=postgres

# =============================================================================
# REDIS CONFIGURATION (for FSM storage and caching)
# =============================================================================
# For Docker: use "redis" as REDIS_HOST
# For local: use "localhost"
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Use MemoryStorage for local development (no Redis required)
FSM_STORAGE_TYPE=memory

# =============================================================================
# OPENROUTER AI CONFIGURATION
# =============================================================================
# Get your API key from https://openrouter.ai/keys
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Available models (choose one):
# - meta-llama/llama-3.1-70b-instruct (recommended, good balance)
# - anthropic/claude-3.5-sonnet (premium, best quality)
# - openai/gpt-4-turbo (premium)
# - mistralai/mixtral-8x7b-instruct (budget-friendly)
OPENROUTER_MODEL=meta-llama/llama-3.1-70b-instruct

# AI request timeout (seconds)
OPENROUTER_TIMEOUT=30

# Prompt version (for tracking)
AI_PROMPT_VERSION=v1.0

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Personal Plan feature (on/off)
FEATURE_PERSONAL_PLAN=on

# Debug mode (enables detailed logging)
DEBUG_MODE=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/bot.log
LOG_MAX_BYTES=10485760  # 10 MB
LOG_BACKUP_COUNT=5

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Timezone (default for users without timezone set)
DEFAULT_TIMEZONE=Europe/Moscow

# FSM state TTL (minutes)
FSM_STATE_TTL=30

# Image cache TTL (days)
IMAGE_CACHE_TTL=30

# Rate limiting (requests per minute per user)
RATE_LIMIT_PER_MINUTE=20

# =============================================================================
# ENVIRONMENT
# =============================================================================
# development, staging, production
ENVIRONMENT=production
